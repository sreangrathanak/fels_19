<% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4">  
      <section class="user_info">
        <h1>      
          <%= gravatar_for @user %>
          <%= @user.name %>        
        </h1>             
        <span>Learned <%= @user.lesson_words.count %> words</span>     
      </section>    
    </aside>
    <div class="col-md-8">      
      <% if @user.lessons.any? %>
        <h3>Activities</h3>      
        <ol class="lessons">
          <%= render @lessons %>
        </ol>
          <%= will_paginate @lessons %>
      <% end %>
    </div>
  </div>