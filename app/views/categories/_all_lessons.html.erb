<% @categories.each do |category| %>
  <div class = "">  
    <h3><%= category.name %></h3>    
    <p>
      <i>        
        You have learned <%= current_user.lesson_words.in_category(category).count %> / <%=category.words.count%> words
      </i>
    </p>    
    <%words=category.words%>
    <% words.each do |word|%>    
      <p><%= word.content %></p>
    <%end%>
  </div>      
  <%= button_to "Start", { controller:"lessons",action: "create",category_id: category.id } %>
<% end %>