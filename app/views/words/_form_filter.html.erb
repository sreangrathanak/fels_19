<div class="row">
  <div class="col-md-10 col-md-offset-3">
	<%= form_tag(words_path, method: :get, class: "form-horizontal col-md-6") do %>	
	  <div class = "form-group">
	    <%= label_tag :category, "Category: ",class: "col-sm-2 control-label" %>
	    <div class = "col-sm-10" >
		  <%= select_tag(:category_id,
		  options_from_collection_for_select(@categories, "id", "name", params[:category_id]),class: "form-control") %>	
	    </div>
      </div>
      <div class = "form-group">
	    <%= label_tag :option, "Option: ",class: "col-sm-2 control-label"%>		
	    <div class = "col-sm-2" >						
		  <%= radio_button_tag :condition, "learned" %>
		  <%= label_tag :label_condition,"Learned"%>
		  <%= radio_button_tag :condition, "notlearned" %>
		  <%= label_tag :label_condition,"NotLearned"%>
		  <%= radio_button_tag :condition, "all" %>
		  <%= label_tag :label_condition,"All"%>
	    </div>
	  </div>
	  <div class = "form-group">					
	    <label for = "submit" class = "col-sm-2  control-label"></label>	
	    <div class = "col-sm-10">	
		  <%= submit_tag "Filter"%> 
	    </div>
	  </div> 	
	<% end %>
  </div>
</div>