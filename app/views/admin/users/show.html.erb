<% provide(:title, @user.name) %>
  <div class="row">       
        <h3>      
          <%= gravatar_for @user %>
          <%= @user.name %>        
        </h3>                           
        <h5>
          Email: <%=@user.email%>
        </h5>        
        <h5>
          User Type: <%= @user.isadmin ? "Admin User" : "Simple User"%>
        </h5>
        <h5>
          Created At <%= @user.created_at%>
        </h5>
        <%= link_to "Update this user", edit_admin_user_path(@user),class:"btn btn-primary"%>
        <%if !current_user?(@user)%>
          <%=link_to "Delete this User", admin_user_path(@user), method: :delete, data: {confirm: "You sure?"},class:"btn btn-primary"%>
        <%end%>
  </div>