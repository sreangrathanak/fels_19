
<%= render "shared/error_messages" ,object: f.object %>
  <%= f.label "Category" %>
  <%= f.select(:category_id,options_from_collection_for_select(@categories, "id", "name", @word.category.nil? ? (params[:category_id].nil? ? 1 : params[:category_id]) : @word.category.id ),class: "form-control ") %>	
  <%= f.label :content %>
  <%= f.text_field :content, class: "form-control field_info" %>      
  <%=f.fields_for :word_answers do |f2|%>
    <%= f2.label "Meaning #{f2.index+1}" %>    
    <table width="100%">
      <tr>
        <td width="80%"><%= f2.text_field :content, class: "form-control field_info" %></td>
        <td width="5%"><%= f2.check_box :correct,class: "rdoc" %></td>
	      <td width="15%"><%= f2.label :correct,"Right"%></td>        
      </tr>
    </table>
  <%end%>
  <script type="text/javascript">        
      $(".rdoc").on("click", function(){                        	      	      
      	$("input:checkbox").attr("checked", false);      	
      	$(this).prop('checked', true);
      });      
  </script>