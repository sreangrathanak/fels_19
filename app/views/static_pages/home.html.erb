<!--Use function to show page title in title bar-->
<!--function file locate at app/view/layout/application.html.erb-->
<% provide(:title, "Home") %>
<!--check wheather user is logged in or not-->
<% if logged_in? %>
<!--if yes-->
  <div class="row">
    <aside class="col-md-4">
    <!--show the user info on home page-->
      <section class="user_info">
      <!--load the file _user_info.html.erb which locate at app/view/shared/-->
        <%= render 'shared/user_info' %>
      </section>      
    </aside>
    <div class="col-md-8">
    	<div>
	  	<%= link_to "Words", words_path, class: "btn btn-lg btn-primary" %>
		
	  	<%= link_to "Lesson", categories_path, class: "btn btn-lg btn-primary" %>
    </div>
    <!--and also show their activity-->
      <h3>Activities</h3>
      <!--load the file _activity.html.erb which locate at app/view/shared/-->
      <%= render 'shared/activity' %>
    </div>
    </div>
  </div>
<% else %>
<!--or else show welcome and sign up page-->
	<center>
		<h1>Welcome to E-Learning System</h1>
		<div>
	  	<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
		</div>
	</center>
<%end%>